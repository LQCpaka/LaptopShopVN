<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Laptop Shop</title>
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="~/favicona.ico" />
    <!-- Bootstrap icons-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="/shop-template/css/styles.css" rel="stylesheet" />
    <link href="/css/site.css" rel="stylesheet" />
    <link href="/css/banner.css" rel="stylesheet" />
</head>
<body>
    <!-- Navigation-->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container px-4 px-lg-5">
            <a class="nav-link" aria-current="page" href="/customer/Home/Index">
                <img src="~/images/logover2.png" style="max-width:4rem; height:auto; ">
            </a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-lg-4">
                    <li class="nav-item"><a class="nav-link" aria-current="page" href="/customer/Home/Index">Trang Chủ</a></li>

                    <li class="nav-item">
                        <a class="nav-link" asp-area="Admin" asp-controller="Category" asp-action="Index">Quản Lý</a>
                    </li>
                </ul>
                <partial name="_LoginPartial" />

                <form class="d-flex" asp-action="Index" asp-controller="Cart">
                    <button class="btn btn-outline-dark" type="submit">
                        <i class="bi-cart-fill me-1"></i>
                        Giỏ
                        <span class="showcart badge bg-dark text-white ms-1 rounded-pill">0</span>
                    </button>
                </form>

            </div>
        </div>
    </nav>


    <!-- Header-->
    <div class="banner-card">
        <img src="~/images/chip.gif" alt="Cyber Art">
        <div class="banner-text">
            <h3>CHÀO MỪNG BẠN ĐẾN VỚI</h3>
            <img class="scale-img" src="~/images/cyber.png" alt="Chilling Art" />
            <h3>MIGRACLE CENTER</h3>
        </div>
    </div>

    <!-- Section-->
    <div class="container my-3">
        @RenderBody()
    </div>

    <!-- Footer-->
    <footer class="footer bg-dark">
        <div class="container"><p class="m-0 text-center text-white">Copyright &copy - Migracle</p></div>
    </footer>
    <!-- Bootstrap core JS-->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <!-- Core theme JS-->
    <script src="/js/site.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
